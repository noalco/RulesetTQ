function MostrarInfo(wVentanaRaiz, sClaveInfo, sCabecera, sInfoComplementariaAntes, sInfoComplementariaDespues)
	local sTexto="";
	if sCabecera and sCabecera~="" then sTexto="&lt;h&gt;"..sCabecera.."&lt;/h&gt;"; end
	if sInfoComplementariaAntes and sInfoComplementariaAntes~="" then sTexto=sTexto.."&lt;p&gt;"..sInfoComplementariaAntes.."&lt;/p&gt;"; end
	if sClaveInfo and CadenasInfo[sClaveInfo] then sTexto=sTexto..CadenasInfo[sClaveInfo]; end;
	if sInfoComplementariaDespues and sInfoComplementariaDespues~="" then sTexto=sTexto.."&lt;p&gt;"..sInfoComplementariaDespues.."&lt;/p&gt;"; end
	wVentanaRaiz.Informacion.setValue(sTexto);
end

function MostrarHabilidades(wVentanaRaiz)
	local valor; local record; local valor2; local record2; local clave;
	local sTexto="&lt;h&gt;Habilidades básicas&lt;/h&gt;";
	for valor,record in pairs(ParseoHabilidades.DatosHabilidades) do
		--["Autoridad"]={prof=0, PG=0, etnia=0, culto=0, esp=0, VentDes=0, varios=0, multEst=0},
		sTexto=sTexto.."&lt;p&gt;&lt;b&gt;"..valor..":&lt;/b&gt; ";
		for clave,valor in pairs(record) do
			sTexto=sTexto..clave.."="..valor.."; ";
		end
		sTexto=sTexto.."&lt;/p&gt;"
	end

	sTexto=sTexto.."&lt;h&gt;Habilidades secundarias&lt;/h&gt;";
	for valor,record in pairs(ParseoHabilidades.DatosHabilidadesSecundarias) do
		--["Autoridad"]={prof=0, PG=0, etnia=0, culto=0, esp=0, VentDes=0, varios=0, multEst=0},
		for valor2,record2 in pairs(record) do
			sTexto=sTexto.."&lt;p&gt;&lt;b&gt;"..valor..": "..valor2..":&lt;/b&gt; ";
			for clave,valor in pairs(record2) do
				sTexto=sTexto..clave.."="..valor.."; ";
			end
			sTexto=sTexto.."&lt;/p&gt;"
		end
	end
	
	sTexto=sTexto.."&lt;h&gt;Armas extra profesion&lt;/h&gt;";
	for valor,record in pairs(ParseoProfesiones.ArmasExtraProfesion) do
		--[1]={tipo="", arma=""}
		sTexto=sTexto.."&lt;p&gt;&lt;b&gt;Arma "..valor..":&lt;/b&gt; tipo="..record.tipo.."; arma="..record.arma.."&lt;/p&gt;"
	end
	
	sTexto=sTexto.."&lt;h&gt;Idiomas extra profesion&lt;/h&gt;";
	for clave,valor in pairs(ParseoProfesiones.IdiomasExtraProfesion) do
		sTexto=sTexto.."&lt;p&gt;&lt;b&gt;Idioma "..clave..":&lt;/b&gt; "..valor.."&lt;/p&gt;"
	end
	
	sTexto=sTexto.."&lt;h&gt;Artesanías extra profesion&lt;/h&gt;";
	for clave,valor in pairs(ParseoProfesiones.ArtesaniasExtraProfesion) do
		sTexto=sTexto.."&lt;p&gt;&lt;b&gt;Artesanía "..clave..":&lt;/b&gt; "..valor.."&lt;/p&gt;"
	end
	--Debug.chat(sTexto)
	wVentanaRaiz.Informacion.setValue(sTexto);
end
